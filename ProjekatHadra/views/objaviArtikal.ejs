    <div class="container">
      <div class="row justify-content-center">
        <div class="col-6">
          <h1>Objavite artikal</h1>
        </div>
      </div>
      <div class="row justify-content-center">
          <div class="col-9">
            <form method="post" action="/trgovac/objaviArtikal" enctype="multipart/form-data">

              <div class="mb-3">
                <label class="form-label">Naziv Vašeg artikla</label>
                <input type="text" class="form-control" id="naziv" name="naziv">
              </div>
              <div class="mb-3">
                <select class="form-select" aria-label="Default select example" name="selekt">
                  <option selected>Izaberite kategoriju</option>
                  <%for(let i=0; i<objekat.length; i++) {%>
                    <option value='<%=objekat[i].id%>' ><%=objekat[i].naziv%></option>
                  <%}%>
                </select>
              </div>

              <div class="mb-3">
                <label class="form-label">Unesite cijenu</label>
                <input type="number" class="form-control" id="cijena" name="cijena">
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Unesite opis artikla</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="opis"></textarea>
              </div>

              <div class="mb-3">
                <label class="form-label" for="customFile">Dodajte sliku artikla</label>
                <input type="file" name="slika" class="form-control" id="customFile" />
              </div>
              <div class="mb-3">
                <label class="form-label">Unesite količinu</label>
                <input type="number" class="form-control" id="kolicina" name="kolicina">
              </div>

              <button type="submit" class="btn btn-primary">Objavite</button>
            </form>
          </div>

      </div>







        </div>
      </div>

    </div>

  </body>
