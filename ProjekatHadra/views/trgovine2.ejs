      <div class="container">
        <!--<div class="row justify-content-center">
          <div class="col-6">
            <h1><%= title %></h1>
          </div>
        </div>-->
        <!-- Search ---------------------------------->
        <div class="row" id="prvi_red">
          <div class="row justify-content-center">
            <div class="col-10 col-lg-6 col-md-6">
              <div class="input-group rounded">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                       aria-describedby="search-addon" />
                <span class="input-group-text border-0" id="search-addon">
                <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">
                  Search
                </button>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
        <!-----------------------------------------------------search------------------------------------------>
        <div class="container">
          <div class="row">
          <%for(let i=0; i<obj.length; i++) {%>
              <div class="col-6 col-lg-3 col-md-4" id="boxovi">
                <div class="row">
                  <div class="slika">
                     <img src="/images/<%=obj[i].slika%>" class="img-fluid img-thumbnail" alt="<%=obj[i].naziv_trgovine%>">
                  </div>
                </div>
                <div class="row" id="ispod">
                  <div class="mb-2">
                    <a id="naziv" href="/trgovine/<%=obj[i].id%>"><strong><%=obj[i].naziv_trgovine%></strong></a>
                  </div>

                  <div class="mb-2">
                    <p><%=obj[i].grad%></p>
                  </div>
                  <div class="mb-2">
                    <p><%=obj[i].ulica%></p>
                  </div>
                  <div class="cijena mb-2">
                    <p><%=obj[i].telefon%></p>
                  </div>
                </div>
              </div>
          <%}%>
          </div>
        </div>


